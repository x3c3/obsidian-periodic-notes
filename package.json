{
  "name": "periodic-notes",
  "version": "1.0.0",
  "description": "Create and manage daily, weekly, monthly, quarterly, and yearly notes",
  "main": "main.js",
  "author": "Mark Ayers (originally by Liam Cain)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "bun run check && vite build",
    "check": "bun run typecheck && biome check . && svelte-check",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "validate": "bun run scripts/validate-plugin.ts",
    "test": "bun test",
    "version": "bun run version-bump.ts"
  },
  "dependencies": {
    "svelte": "^5.53.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.8",
    "@types/bun": "^1.3.9",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.3.0",
    "lodash": "^4.17.23",
    "moment": "^2.30.1",
    "obsidian": "^1.12.2",
    "sass": "^1.97.3",
    "svelte-check": "^4.4.1",
    "svelte-writable-derived": "^3.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
